<refentry xml:id="function.imageaffine" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink">
 <refnamediv>
  <refname>imageaffine</refname>
  <refpurpose>返回经过仿射变换后的图像，剪切区域可选</refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>resource</type><methodname>imageaffine</methodname>
   <methodparam><type>resource</type><parameter>image</parameter></methodparam>
   <methodparam><type>array</type><parameter>affine</parameter></methodparam>
   <methodparam choice="opt"><type>array</type><parameter>clip</parameter></methodparam>
  </methodsynopsis>
  <para>

  </para>

  &warn.undocumented.func;

 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <variablelist>
   &gd.image.description;
   <varlistentry>
    <term><parameter>affine</parameter></term>
    <listitem>
     <para>
      数组，其中键为 0 至 5 的数字。
     </para>
    </listitem>
   </varlistentry>
   <varlistentry>
    <term><parameter>clip</parameter></term>
    <listitem>
     <para>
      数组，其中键为 "x"，"y"，"width" 和 "height"。
     </para>
    </listitem>
   </varlistentry>
  </variablelist>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
    成功则返回仿射变换后的图像，&return.falseforfailure;.
  </para>
 </refsect1>

</refentry>

