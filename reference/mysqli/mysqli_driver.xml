  </section>
<!-- }}} -->
 
  <section xml:id="mysqli-driver.synopsis">
   &reftitle.classsynopsis;
 
<!-- {{{ Synopsis -->
   <classsynopsis>
    <ooclass><classname>MySQLi_Driver</classname></ooclass>
 
<!-- {{{ Class synopsis -->
