<refentry xmlns="http://docbook.org/ns/docbook" xml:id="function.strrev">
 <refnamediv>
  <refname>strrev</refname>
  <refpurpose>反转字符串</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>strrev</methodname>
   <methodparam><type>string</type><parameter>string</parameter></methodparam>
  </methodsynopsis>
  <para>
   返回 <parameter>string</parameter> 反转后的字符串。
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>string</parameter></term>
     <listitem>
      <para>
       待反转的原始字符串。
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   返回反转后的字符串。
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>使用 <function>strrev</function> 反转字符串</title>
    <programlisting role="php">
<![CDATA[
<?php
echo strrev("Hello world!"); // 输出 "!dlrow olleH"
?>
]]>
    </programlisting>
   </example>
  </para>   
 </refsect1>

</refentry>

